local NotificationLibrary = {}

local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")

local screenGui = CoreGui:FindFirstChild("NotificationGui") or Instance.new("ScreenGui")
screenGui.Name = "NotificationGui"
screenGui.Parent = CoreGui
screenGui.ResetOnSpawn = false

local function extractPlainText(richText)
    return richText:gsub("<[^>]->", "") -- Remove <font> tags during animation
end

function NotificationLibrary:Notification(text, typeSpeed, randomLength)
    typeSpeed = typeSpeed or 0.02
    randomLength = randomLength or 15

    local plainText = extractPlainText(text)

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 300, 0, 30)
    frame.Position = UDim2.new(0.5, -150, 0.8, 0)
    frame.BackgroundTransparency = 1
    frame.Parent = screenGui

    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.TextSize = 22 -- Bigger text
    textLabel.RichText = true
    textLabel.Text = ""
    textLabel.FontFace = Font.new("rbxasset://fonts/families/GothamSSm.json")
    textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    textLabel.TextTransparency = 0
    textLabel.Parent = frame

    local function generateRandomString(length)
        local characters = "!@#$%^&*()_+=-ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
        local result = ""
        for i = 1, length do
            local randIndex = math.random(1, #characters)
            result = result .. string.sub(characters, randIndex, randIndex)
        end
        return result
    end

    local function typeTextEffect(finalText, fullRichText)
        local tempText = generateRandomString(math.min(randomLength, #finalText))
        textLabel.Text = tempText

        for i = 1, #finalText do
            tempText = string.sub(tempText, 1, i - 1) .. string.sub(finalText, i, i) .. string.sub(tempText, i + 1)
            textLabel.Text = "<font color='rgb(255,255,255)'>" .. tempText .. "</font>" -- Keeps color during animation
            wait(typeSpeed)
        end

        textLabel.Text = fullRichText

        local fadeOut = TweenService:Create(textLabel, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {TextTransparency = 1})
        wait(1)
        fadeOut:Play()

        wait(0.5)
        frame:Destroy()
    end

    typeTextEffect(plainText, text)
end

return NotificationLibrary
