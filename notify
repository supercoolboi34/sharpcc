local NotificationLibrary = {}

local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")

local screenGui = CoreGui:FindFirstChild("NotificationGui") or Instance.new("ScreenGui")
screenGui.Name = "NotificationGui"
screenGui.Parent = CoreGui
screenGui.ResetOnSpawn = false

function NotificationLibrary:Notification(text, duration, textColor)
    duration = duration or 5
    textColor = textColor or Color3.fromRGB(255, 255, 255)

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 300, 0, 30)
    frame.Position = UDim2.new(0.5, -150, 0.75, 0)
    frame.BackgroundTransparency = 1
    frame.Parent = screenGui
    frame.ClipsDescendants = true

    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.TextTransparency = 1
    textLabel.BackgroundTransparency = 1
    textLabel.TextSize = 20
    textLabel.RichText = true
    textLabel.Text = ""
    textLabel.Font = Enum.Font.GothamBold
    textLabel.TextColor3 = textColor
    textLabel.Parent = frame

    local function generateRandomString(length)
        local characters = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
        local result = ""
        for i = 1, length do
            local randIndex = math.random(1, #characters)
            result = result .. string.sub(characters, randIndex, randIndex)
        end
        return result
    end

    local function typeTextEffect(finalText)
        textLabel.TextTransparency = 0
        local tempText = generateRandomString(#finalText)
        for i = 1, #finalText do
            tempText = string.sub(tempText, 1, i - 1) .. string.sub(finalText, i, i) .. string.sub(tempText, i + 1)
            textLabel.Text = tempText
            wait(0.03)
        end
    end

    typeTextEffect(text)

    wait(duration)

    local textFadeOut = TweenService:Create(textLabel, TweenInfo.new(0.3), {TextTransparency = 1})
    textFadeOut:Play()

    wait(0.3)
    frame:Destroy()
end

return NotificationLibrary
